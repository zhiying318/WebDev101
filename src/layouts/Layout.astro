---
import Navbar from '../components/navbar.astro';

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <title>{title}</title>
  <!-- import global.css -->
  <link rel="stylesheet" href={new URL("/styles/global.css", import.meta.url)} />
</head>
<body>
  <Navbar />
  <main>
    <slot /> <!-- insert page content -->
  </main>
</body>
</html>


<style>
	#game-container {
	  position: relative;
	  z-index: 1; /* nav bar should be z-index >0 so as to float over the main context */
	  padding-top: 60px;
	}
	
	/* keep the navbar always the top of the web page */
	nav {
	  position: fixed;
	  top: 0;
	  left: 0;
	  width: 100%;
	  z-index: 1000;
	}
	main {
    padding-top: 60px; /* add 60px to the main part, to avoid the overlap of nav bar */
  }
  </style>

