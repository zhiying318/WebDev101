---
import BaseLayout from '../layouts/Layout.astro';
const pageTitle = "Exercices - WebDev101";
import '../styles/exercices.css';


const sections = [
{ id: "01_hello_world_ts", title: "01 hello world typescript" },
  { id: "02_hello_astro_typescript", title: "02 hello astro typescript" },
  { id: "03_modules", title: "03 modules" },
  { id: "04_client_server", title: "04 client or server side" },
  { id: "05_html_css_punto", title: "05 html css punto" },
  { id: "06_css_flexbox", title: "06 CSS flexbox" },
  { id: "07_fat_arrow", title: "07 fat arrow" },
  { id: "08_map_reduce", title: "08 map reduce filter" },
  { id: "09_objects", title: "09 objects" },
  { id: "10_json", title: "10 json" },
  { id: "11_generics", title: "11 generics" },
  { id: "12_exceptions", title: "12 exceptions" },
  { id: "13_async_await", title: "13 async await" },
  { id: "14_fetch", title: "14 fetch" },
  { id: "15_cors", title: "15 cors" },
  { id: "16_http_crud", title: "16 http CRUD" },
  { id: "17_forms", title: "17 forms" },
  { id: "18_web_components", title: "18 web components" },
];

import Exo01 from '../components/exercices/01_hello_world_ts.astro';
import Exo02 from '../components/exercices/02_hello_astro_typescript.astro';
import Exo03 from '../components/exercices/03_modules.astro';
import Exo04 from '../components/exercices/04_client_server.astro';
import Exo05 from '../components/exercices/05_html_css_punto.astro';
import Exo06 from '../components/exercices/06_css_flexbox.astro';
import Exo07 from '../components/exercices/07_fat_arrow.astro';
import Exo08 from '../components/exercices/08_map_reduce.astro';
import Exo09 from '../components/exercices/09_objects.astro';
import Exo10 from '../components/exercices/10_json.astro';
import Exo11 from '../components/exercices/11_generics.astro';
import Exo12 from '../components/exercices/12_exceptions.astro';
import Exo13 from '../components/exercices/13_async_await.astro';
import Exo14 from '../components/exercices/14_fetch.astro';
import Exo15 from '../components/exercices/15_cors.astro';
import Exo16 from '../components/exercices/16_http_crud.astro';
import Exo17 from '../components/exercices/17_forms.astro';
import Exo18 from '../components/exercices/18_web_components.astro';
---


<BaseLayout title={pageTitle}>
  <div class="exercise-layout">
    <aside class="sidebar">
      <h2>Exercices</h2>
      <ul>
        {sections.map(section => (
          <li>
            <a href={`#${section.id}`}>{section.title}</a>
          </li>
        ))}
      </ul>
    </aside>

    <main class="content">
      <Exo01 />
      <Exo02 />
      <Exo03 /> 
      <Exo04 />
      <Exo05 />
      <Exo06 />
      <Exo07 />
      <Exo10 />
      <!-- <Exo11 />
      <Exo12 />
      <Exo13 />
      <Exo14 />
      <Exo15 />
      <Exo16 />
      <Exo17 />
      <Exo18 /> -->
      
      <!-- 继续插入组件 -->
    </main>
  </div>

  <script is:inline> // highlight-line
    document.addEventListener("DOMContentLoaded", () => {
      const sections = document.querySelectorAll("main section[id]");
      const navLinks = document.querySelectorAll(".sidebar a");
  
      function activateSection() {
        let currentId = "";
  
        sections.forEach((section) => {
          const sectionTop = section.offsetTop;
          if (pageYOffset >= sectionTop - 150) {
            currentId = section.getAttribute("id");
          }
        });
  
        navLinks.forEach((link) => {
          link.classList.remove("active");
          if (link.getAttribute("href") === `#${currentId}`) {
            link.classList.add("active");
          }
        });
      }
  
      window.addEventListener("scroll", activateSection);
      activateSection(); 
    });
  </script>
  
</BaseLayout>



